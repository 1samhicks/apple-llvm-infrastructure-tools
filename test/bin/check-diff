#!/bin/bash

usage() {
    printf "usage: $(basename "$0") <checks-input> <prefix> <tempdir>\n"
}
usage_error() {
    usage >&2
    error "$@"
}
error() { printf "error: %s\n" "$*" >&2; exit 1; }
run() { printf "# %s\n" "$*" >&2; "$@"; }
check() { run "$@" || exit 1; }


if [ $# -eq 0 ]; then
    usage
    exit 0
fi

[ $# -eq 3 ] || usage_error "wrong number of positional parameter"
CHECKS="$1"
PREFIX="$2"
T="$3"
D="$T"."$PREFIX".d
A="$D"/expected
B="$D"/observed

es=(
-e "^$PREFIX:"
-e "[^-]\b$PREFIX:"
)

check mkdir -p "$D"
run grep -q "${es[@]}" "$CHECKS" ||
    error "no hits for '$PREFIX' in '$CHECKS'"
run grep    "${es[@]}" "$CHECKS" | run sed -e "s,.*$PREFIX:,," >"$A" || exit 1
check cat >"$B"
check diff -u -w "$A" "$B"
