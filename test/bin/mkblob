#!/bin/bash

. "$(dirname "$0")"/init.sh

REPO="$1"
BLOB="$2"

[ -d "$REPO" ] || error "no such repo: '$REPO'"
[ -d "$REPO"/.git ] || error "invalid repo: '$REPO'"

FILE="$REPO"/"$BLOB"
[ ! -f "$FILE" ] || error "blob already exists: '$BLOB'"
check mkdir -p "$(dirname "$FILE")"
check printf "%s\n" "$BLOB" > "$FILE"
check cd "$REPO"
check git add "$BLOB"

at="${at:-1550000000}"
ct="${ct:-$at}"
atz="${atz:-+0000}"
ctz="${ctz:-$atz}"
an="${an:-mkblob.sh}"
cn="${cn:-$an}"
ae="${ae:-mkblob@apple.llvm}"
ce="${ce:-$ae}"
check env \
    GIT_AUTHOR_NAME="$an" GIT_COMMITTER_NAME="$cn" \
    GIT_AUTHOR_EMAIL="$ae" GIT_COMMITTER_EMAIL="$ce" \
    GIT_AUTHOR_DATE="$at $atz" GIT_COMMITTER_DATE="$ct $ctz" \
    git commit -am \
    "$(printf "%s\n\n%s\n" "mkblob: $BLOB" "added the blob $BLOB")"
