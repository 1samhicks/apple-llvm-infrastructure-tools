repo a   file://%t-a
repo b   file://%t-b
repo out file://%t-out

destination splitref out
destination monorepo out

declare-dir a
declare-dir b

generate 0001 branch ab
dir ab a a/master
dir ab b b/master

generate 0002 branch a2b
dir a2b a a/a2

generate 0003 branch a2b2
repeat a2b2 a2b
dir    a2b2 b b/b2
